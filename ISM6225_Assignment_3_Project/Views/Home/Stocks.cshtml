@model IEnumerable<ISM6225_Assignment_3_Project.Models.iex_api_Company>
<!-- Top Section
-------------------------------------------------------------------------- -->
<div class="top_section new_section">
    <div class="container">
        <div class="row">
            <form asp-controller="Home" asp-action="Stocks" method="get">
                <!-- Stock Picker
                -------------------------------------------------------------- -->
                <div class="six columns stockpicker">
                    <div class="dropdown">

                        <select name="getSymbol">
                            @foreach (var stock in Model)
                            {
                                @Html.Raw(stock.userOption)
                            }
                        </select>
                        <input type="submit" value="select stock" />

                    </div>
                </div>
                <!-- Currency Picker
                -------------------------------------------------------------- -->
                <div class="six columns fxpicker">
                    Show Prices in Selected Currency
                </div>
                <div class="six columns fxpicker">
                    <select name="getFx">
                        @foreach (var Currency in ViewBag.CurrencyList.FxSymbols)
                        {
                            @Html.Raw(Currency.userOption)
                        }
                    </select>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Middle Section
-------------------------------------------------------------------------- -->
<div class="middle_section new_section">
    <div class="container">
        <div class="row">
            <div class="eight columns">
                Stock Chart

                <br />
                <canvas id="chart_stock" width="420" height="450"></canvas>
            </div>
            <div class="four columns">
                News Ticker
                News Ticker
                <br />
                @foreach (var article in ViewBag.news)
                {
                    @Html.Raw(article.headline)
                    <a href="@Html.Raw(article.url)">Link to article</a>
                }
            </div>

        </div>
    </div>
</div>


<!-- Bottom Section
-------------------------------------------------------------------------- -->
<div class="bottom_section new_section">
    <div class="container">
        <div class="row">
            <div class="eight columns">
                Tech Indicator
                <canvas id="chart_indicator" width="420" height="450"></canvas>
            </div>
            <div class="four columns">
                Company Logo
                <br />
                <img src=@ViewBag.logo />
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    document.addEventListener('DOMContentLoaded', function ()
    {
        DrawCharts("@ViewBag.stockChart.Symbol"
                    ,"@ViewBag.stockChart.CompanyName"
                    ,"@ViewBag.stockChart.Dates"
                    ,"@ViewBag.stockChart.PriceClosing"
                    );
    }, false);
</script>

